{
  "name": "build-reference",
  "tools": ["mosaik-build-reference", "mosaik-jump"],
  "tasks": {
    "build-reference": {
      "tool_id": "mosaik-build-reference",
      "task_options": {},
      "task_inputs": {
        "reference-sequence-fasta": {
          "source": {
            "pipeline_input_id": "reference-sequence-fasta"
          }
        }
      }
    },
    "build-jump-database": {
      "tool_id": "mosaik-jump",
      "task_options": {
        "-hs": 10
      },
      "task_inputs": {
        "mosaik-reference-data": {
          "source": {
            "task_id": "build-reference",
            "tool_output_id": "mosaik-reference-data"
          }
        } 
      }
    }
  },
  "pipeline_inputs": {
    "reference-sequence-fasta": {
      "description": "FASTA formatted reference sequence",
      "legal_file_extensions": ["fasta", "fa"]
    }
  },
  "pipeline_outputs": {
    "keys_out": {
      "file_extension": "jmp",
      "source": {
        "task_id": "build-jump-database",
        "tool_output_id": "keys"
      }
    },
    "meta_out": {
      "file_extension": "jmp",
      "source": {
        "task_id": "build-jump-database",
        "tool_output_id": "meta"
      }
    },
    "positions_out": {
      "file_extension": "jmp",
      "source": {
        "task_id": "build-jump-database",
        "tool_output_id": "meta"
      }
    }
  }
}